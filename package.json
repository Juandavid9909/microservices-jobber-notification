{
    "name": "jobber-notification-service",
    "version": "1.3.0",
    "description": "Microservicio para env√≠o de notificaciones",
    "main": "app.js",
    "scripts": {
        "start": "pm2 start ./build/src/app.js -i 5 --attach --watch | pino-pretty -c",
        "stop": "pm2 stop all",
        "delete": "pm2 delete all",
        "dev": "nodemon -r tsconfig-paths/register src/app.ts | pino-pretty -c",
        "lint:check": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "prettier:check": "prettier --config .prettierrc.json --check 'src/**/*.{ts,json}'",
        "prettier:fix": "prettier --config .prettierrc.json --write 'src/**/*.{ts,json}'",
        "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json && ts-node tools/copyAssets.ts",
        "test": "jest --coverage=true -w=1 --forceExit --detectOpenHandles --watchAll=false"
    },
    "keywords": [],
    "author": " Juan David",
    "license": "ISC",
    "devDependencies": {
        "@jest/types": "^29.6.3",
        "@types/amqplib": "^0.10.5",
        "@types/email-templates": "^10.0.4",
        "@types/express": "^4.17.21",
        "@types/fs-extra": "^11.0.4",
        "@types/jest": "^29.5.13",
        "@types/nodemailer": "^6.4.15",
        "@typescript-eslint/eslint-plugin": "^8.5.0",
        "@typescript-eslint/parser": "^8.5.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.30.0",
        "jest": "^29.7.0",
        "prettier": "^3.3.3",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.10",
        "tsconfig-paths": "^4.2.0"
    },
    "dependencies": {
        "@elastic/elasticsearch": "^8.15.0",
        "@juandavid9909/jobber-shared": "^1.1.0",
        "amqplib": "^0.10.4",
        "dotenv": "^16.4.5",
        "ejs": "^3.1.10",
        "email-templates": "^12.0.1",
        "express": "^4.20.0",
        "express-async-errors": "^3.1.1",
        "fs-extra": "^11.2.0",
        "http-status-codes": "^2.3.0",
        "nodemailer": "^6.9.15",
        "pino-pretty": "^11.2.2",
        "typescript": "^5.6.2",
        "typescript-transform-paths": "^3.5.0",
        "winston": "^3.14.2"
    }
}